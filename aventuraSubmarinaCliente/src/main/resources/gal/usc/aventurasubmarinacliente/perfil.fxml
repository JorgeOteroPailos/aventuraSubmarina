<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<?import javafx.scene.image.Image?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="gal.usc.aventurasubmarinacliente.Controladores.PerfilController"
            fx:id="root"
            styleClass="root"
            stylesheets="@/general.css">

    <!-- ===== BARRA SUPERIOR ===== -->
    <top>
        <HBox alignment="CENTER_LEFT"
              spacing="10"
              styleClass="top-bar">

            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Button text="Volver"
                    fx:id="btnVolver"
                    onAction="#onVolver"
                    styleClass="secondary-button"/>
        </HBox>
    </top>

    <!-- ===== CONTENIDO CENTRAL ===== -->
    <center>
        <VBox fx:id="contentBox"
              alignment="CENTER"
              spacing="20"
              styleClass="content">

            <!-- TÃ­tulo principal -->
            <Label text="Perfil"
                   style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: white;"/>

            <!-- Avatar con borde suave -->
            <StackPane fx:id="avatarContainer" prefWidth="150" prefHeight="150">
                    <ImageView fx:id="imgTip"
                               fitWidth="460"
                               fitHeight="170"
                               preserveRatio="true"
                               visible="false"
                               managed="false"
                    >
                    <image>
                        <Image url="@imagenes/submarino.png"/>
                    </image>
                </ImageView>
            </StackPane>


            <!-- Nombre de usuario -->
            <Label fx:id="lblNombreUsuario"
                   style="-fx-font-size: 18px; -fx-text-fill: #CFFAFE; -fx-font-weight: bold;"/>

            <!-- BotÃ³n principal: Historial de partidas -->
            <Button text="ðŸ“Š Ver historial de partidas"
                    fx:id="btnHistorial"
                    onAction="#onVerHistorial"
                    styleClass="primary-button">
                <padding>
                    <Insets top="10" bottom="10"/>
                </padding>
            </Button>

            <!-- BotÃ³n secundario: Borrar perfil -->
            <Button text="Borrar perfil"
                    fx:id="btnBorrarPerfil"
                    onAction="#onBorrarPerfil"
                    styleClass="danger-button"/>

        </VBox>
    </center>

</BorderPane>