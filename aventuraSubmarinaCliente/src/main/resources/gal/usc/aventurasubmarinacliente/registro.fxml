<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="18.0"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="gal.usc.aventurasubmarinacliente.Controladores.RegistroController"
      stylesheets="@/general.css">

    <padding>
        <Insets top="24.0" right="24.0" bottom="24.0" left="24.0"/>
    </padding>

    <Label text="Crear cuenta"
           style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <GridPane hgap="10.0" vgap="12.0">
        <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="usernameField"
                   promptText="ex: jorge"
                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Contrasinal:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <PasswordField fx:id="passwordField"
                       promptText="••••••••"
                       GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Repite o contrasinal:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <PasswordField fx:id="passwordRepeatField"
                       promptText="••••••••"
                       GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>

    <Button text="Rexistrarse"
            onAction="#onRegisterClicked"/>

    <Hyperlink text="← Volver ao inicio de sesión"
               onAction="#volverLogin"/>

    <Label fx:id="statusLabel"
           wrapText="true"
           style="-fx-text-fill: #cc0000;"/>
</VBox>
